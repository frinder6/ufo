<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ufo.mapper.impl.MenuInfoEntityMapperImpl">

    <resultMap id="BaseResultMap" extends="com.ufo.mapper.MenuInfoEntityMapper.BaseResultMap"
               type="com.ufo.entity.MenuInfoEntity">
    </resultMap>

    <!-- 加载菜单的级联查询返回结果 -->
    <resultMap id="MenuResultMap" extends="com.ufo.mapper.MenuInfoEntityMapper.BaseResultMap"
               type="com.ufo.entity.sub.MenuInfoSubEntity">
        <collection property="children" column="id" select="selectByPid" javaType="ArrayList"
                    ofType="com.ufo.entity.sub.MenuInfoSubEntity"/>
    </resultMap>

    <!-- 加载菜单树的级联查询返回结果 -->
    <resultMap id="TreeResultMap" type="com.ufo.entity.EasyuiTreeTemplate">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="text" jdbcType="VARCHAR"/>
        <collection property="children" column="id" select="selectTreeByPid" javaType="ArrayList"
                    ofType="com.ufo.entity.EasyuiTreeTemplate"/>
    </resultMap>

    <sql id="Base_Column_List">
        <include refid="com.ufo.mapper.MenuInfoEntityMapper.Base_Column_List"/>
    </sql>

    <!-- 级联查询菜单 -->
    <select id="selectByPid" resultMap="MenuResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM ufo_menu_info
        WHERE status = 1
        AND parent_id = #{parentId,jdbcType=BIGINT}
        ORDER BY orderby
    </select>

    <!-- 级联查询菜单树 -->
    <select id="selectTreeByPid" resultMap="TreeResultMap">
        SELECT
        id, title
        FROM ufo_menu_info
        WHERE status = 1
        AND parent_id = #{parentId,jdbcType=BIGINT}
        ORDER BY orderby
    </select>

    <sql id="Base_Where_Clause">
        <if test="e.parentId != null">
            AND parent_id = #{e.parentId,jdbcType=BIGINT}
        </if>
        <if test="e.title != null">
            AND title LIKE #{e.title,jdbcType=VARCHAR}"%"
        </if>
        <if test="e.url != null">
            AND url LIKE #{e.url,jdbcType=VARCHAR}"%"
        </if>
        <if test="e.icon != null">
            AND icon LIKE #{e.icon,jdbcType=VARCHAR}"%"
        </if>
        <if test="e.orderby != null">
            AND orderby = #{e.orderby,jdbcType=TINYINT}
        </if>
        <if test="e.status != null">
            AND status = #{e.status,jdbcType=TINYINT}
        </if>
        <if test="e.createTime != null">
            AND create_time = #{e.createTime,jdbcType=TIMESTAMP}
        </if>
        <if test="e.creater != null">
            AND creater = #{e.creater,jdbcType=VARCHAR}
        </if>
        <if test="e.updateTime != null">
            AND update_time = #{e.updateTime,jdbcType=TIMESTAMP}
        </if>
        <if test="e.updater != null">
            AND updater = #{e.updater,jdbcType=VARCHAR}
        </if>
    </sql>
    <!-- 分页查询 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM ufo_menu_info
        WHERE 1 = 1
        <include refid="Base_Where_Clause"/>
        ORDER BY ${p.sort} ${p.order}
        LIMIT #{p.pageFrom}, #{p.pageSize}
    </select>
    <select id="selectPageCount" resultType="java.lang.Integer">
        SELECT
        COUNT(1)
        FROM ufo_menu_info
        WHERE 1 = 1
        <include refid="Base_Where_Clause"/>
    </select>


</mapper>